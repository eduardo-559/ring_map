<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment"
    android:paddingBottom="100dp">

<View
    android:id="@+id/container_user"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"
    android:background="@drawable/container_user"/>

    <ImageView
        android:id="@+id/picture_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_name"
        app:layout_constraintStart_toStartOf="@id/container_user"
        app:layout_constraintEnd_toEndOf="@id/container_user"
        app:layout_constraintTop_toTopOf="@id/container_user"
        app:layout_constraintBottom_toBottomOf="@id/container_user"
        app:tint="?attr/colorSecondary" />


    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_email"
        app:tint="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_user"
        />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/icon_email"
        app:layout_constraintTop_toBottomOf="@id/container_user"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textColor="?attr/colorSecondary"/>

    <ImageView
        android:id="@+id/icon_nome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_name"
        app:tint="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_email"
        />

    <TextView
        android:id="@+id/text_nome"
        android:text=""
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_nome"
        app:layout_constraintTop_toBottomOf="@id/text_email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textColor="?attr/colorSecondary"/>

    <ImageView
        android:id="@+id/icon_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baseline_numbers_24"
        app:tint="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_nome"
        />

    <TextView
        android:id="@+id/text_id"
        android:text=""
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_id"
        app:layout_constraintTop_toBottomOf="@id/text_nome"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textColor="?attr/colorSecondary"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_deslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deslogar"
        android:textColor="?attr/colorPrimary"
        android:backgroundTint="?attr/colorSecondary"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_id"/>



</androidx.constraintlayout.widget.ConstraintLayout>